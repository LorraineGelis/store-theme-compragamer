{
    "minicart.v2#header__tablet--minicart": {
        "title": "minicart: desktop",
        "props": {
            "itemCountMode": "total",
            "quantityDisplay": "always",
             "variation": "link", 
          "linkVariationUrl": "https://storecompragamer--itgloberspartnercl.myvtex.com/checkout/#/cart"  
        },
        "children": [
            "minicart-base-content"
        ]
    },
       // trae la lista de los productos al carrito
    "minicart-base-content#tablet__minicart":{
        "title": "minicart: base-content",
        "blocks": [
            "minicart-empty-state#tablet__minicart"
        ],
        "children": [
            "minicart-product-list", 
            "flex-layout.row#minicart__footer--tablet"
        ],
        "props": {
            "horizontalAlign": "center",
            "verticalAlign": "middle",
            "rowGap": 5
          }
    },
   
    "minicart-empty-state#tablet__minicart": {
        "title": "minicart: empty",
        "children": [
            "flex-layout.row#minicart__empty--tablet"
        ]
    },
    "flex-layout.row#minicart__empty--tablet":{
        "title": "minicart: empty",
        "children": [
            "flex-layout.col#minicart__empty--tablet"
        ]
    },
    "flex-layout.col#minicart__empty--tablet":{
        "title": "minicart: empty",
        "children": [
            "icon-cart#minicart__empty--icon--tablet"
           /*  "rich-text#minicart__empty--text" */
        ],
        "props": {
            "horizontalAlign": "center",
            "verticalAlign": "middle",
            "rowGap": 5
          }
    },
    "icon-cart#minicart__empty--icon--tablet":{
        "title": "minicart: icon",
        "props":{
            "size": 100
        }
    },
    "flex-layout.row#minicart__footer--tablet":{
        "title": "minicart: footer",
        "children": [
            "minicart-summary",
            "minicart-checkout-button" 
        ]
    }
